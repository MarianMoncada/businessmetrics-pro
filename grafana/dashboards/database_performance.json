{
  "dashboard": {
    "title": "Rendimiento de Base de Datos - BusinessMetrics Pro",
    "tags": ["database", "performance", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Conexiones Activas",
        "type": "stat",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "refId": "A",
            "format": "table",
            "rawSql": "SELECT COUNT(*) as value FROM pg_stat_activity WHERE state = 'active'",
            "datasource": "BusinessMetrics PostgreSQL"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "green"
                },
                {
                  "value": 50,
                  "color": "yellow"
                },
                {
                  "value": 100,
                  "color": "red"
                }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Tamaño de Base de Datos",
        "type": "stat",
        "gridPos": {
          "x": 6,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "refId": "A",
            "format": "table",
            "rawSql": "SELECT pg_size_pretty(pg_database_size('businessmetrics')) as value",
            "datasource": "BusinessMetrics PostgreSQL"
          }
        ]
      },
      {
        "id": 3,
        "title": "Transacciones por Segundo",
        "type": "graph",
        "gridPos": {
          "x": 12,
          "y": 0,
          "w": 6,
          "h": 8
        },
        "targets": [
          {
            "refId": "A",
            "format": "time_series",
            "rawSql": "SELECT now() as time, xact_commit + xact_rollback as value FROM pg_stat_database WHERE datname = 'businessmetrics'",
            "datasource": "BusinessMetrics PostgreSQL"
          }
        ]
      },
      {
        "id": 4,
        "title": "Top 10 Consultas Más Lentas",
        "type": "table",
        "gridPos": {
          "x": 0,
          "y": 4,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "refId": "A",
            "format": "table",
            "rawSql": "SELECT substring(query, 1, 50) as \"Query\", calls as \"Llamadas\", round(total_exec_time::numeric, 2) as \"Tiempo Total (ms)\", round(mean_exec_time::numeric, 2) as \"Tiempo Promedio (ms)\" FROM pg_stat_statements ORDER BY mean_exec_time DESC LIMIT 10",
            "datasource": "BusinessMetrics PostgreSQL"
          }
        ]
      },
      {
        "id": 5,
        "title": "Uso de Tablas (Scans)",
        "type": "table",
        "gridPos": {
          "x": 0,
          "y": 12,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "refId": "A",
            "format": "table",
            "rawSql": "SELECT schemaname as \"Schema\", tablename as \"Tabla\", seq_scan as \"Sequential Scans\", idx_scan as \"Index Scans\", n_tup_ins as \"Inserts\", n_tup_upd as \"Updates\", n_tup_del as \"Deletes\" FROM pg_stat_user_tables ORDER BY seq_scan DESC LIMIT 10",
            "datasource": "BusinessMetrics PostgreSQL"
          }
        ]
      },
      {
        "id": 6,
        "title": "Cache Hit Ratio",
        "type": "gauge",
        "gridPos": {
          "x": 12,
          "y": 8,
          "w": 6,
          "h": 8
        },
        "targets": [
          {
            "refId": "A",
            "format": "table",
            "rawSql": "SELECT round(100.0 * sum(blks_hit) / nullif(sum(blks_hit) + sum(blks_read), 0), 2) as value FROM pg_stat_database",
            "datasource": "BusinessMetrics PostgreSQL"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "red"
                },
                {
                  "value": 80,
                  "color": "yellow"
                },
                {
                  "value": 95,
                  "color": "green"
                }
              ]
            },
            "unit": "percent"
          }
        }
      }
    ],
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }
}
